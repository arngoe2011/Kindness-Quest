import random, time
from colorama import Fore, Style, init
init(autoreset=True)



def kindness_initial():
    print('\n \n \n')
    print(Fore.BLUE + Style.BRIGHT + '''Hello, and Welcome to ''' + Fore.LIGHTGREEN_EX +  Style.BRIGHT + '''"Are You As Kind As You Think You Are?" ''' + Fore.BLUE + Style.BRIGHT + '''
Here are the RULES: You will have to answer 8 tricky questions that must be carefully thought of.  For each one you get right, you will recieve a letter. Unscramble the 8 letter word to recieve the final key to win! You got this :)''')
    print('')
    ok = input(Fore.LIGHTYELLOW_EX + 'When you have read all the rules, type "ok": ')
    while ok != 'ok':
        print(Fore.LIGHTYELLOW_EX + 'Please only type in "ok". Thank you!')
        ok = input(Fore.LIGHTYELLOW_EX + 'When you have read all the rules, type "ok": ')

    print(Fore.RESET + "\n" + "="*100)
    print("SCENARIO 1: HOME üè†")
    print("="*100 + "\n")
    print(Fore.LIGHTCYAN_EX + Style.BRIGHT + 'You are at home on a Saturday, and your parents are not home. Suddenly, you see your younger brother trip down the stairs and cry. Do you...')
    print(Fore.LIGHTWHITE_EX + '1) laugh')
    print(Fore.LIGHTWHITE_EX + '2) text your parents, then help your brother')
    print(Fore.LIGHTWHITE_EX + '3) help your brother, then text your parents')
    print(Fore.LIGHTWHITE_EX + '''4) call 911 and tell them your brother isn't feeling well''')
    home = input(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'Enter the number you think is correct: ')
    while home.lower() != 'three' and home != '3':
        print(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'What is the priority at the moment? Hmm ...')
        home = input(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'Enter the number you think is correct: ')
    print('')
    print(Fore.MAGENTA + Style.BRIGHT + 'Great job! Your first letter:' + Fore.LIGHTWHITE_EX + ' "D" ') 
    print(Fore.LIGHTYELLOW_EX + Style.BRIGHT + "Let's visit the school now!")
    print('')
    kindness_a()
def kindness_a():
    print("\n" + "="*100)
