def kindness_e():
    print("\n" + "="*100)
    print("SCENARIO 6: PARK üõù")
    print("="*100 + "\n")
    print(Fore.LIGHTCYAN_EX + Style.BRIGHT + '''You are taking a stroll through the park when you see an someone drop a plastic fork and not pick it up! Do you...''')
    print(Fore.LIGHTWHITE_EX + '''21) Inform them that they dropped the fork and tell them not to pollute the environment ''')
    print(Fore.LIGHTWHITE_EX + '''22) IGNORE, INGORE, IGNORE, IGNORE, ... ''')
    print(Fore.LIGHTWHITE_EX + '''23) Pick it up for them ''')
    print(Fore.LIGHTWHITE_EX + '''24) Stab them with the fork they dropped ''')
    pollute = input(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'Enter the number you think is correct: ')
