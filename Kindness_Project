def kindness_ending():
    print("\n" + "="*100)
    print("SCENARIO 8: APPARTEMENT üåá")
    print("="*100 + "\n")
    print(Fore.LIGHTCYAN_EX + Style.BRIGHT + '''After a long day of helping people from here to there, you are finally going to your appartement.
     On the way there, you see someone having a horrible day, crying on the side of the street. Do you ...''')
    print(Fore.LIGHTWHITE_EX + '''29) IGNORE, INGORE, IGNORE, IGNORE, ...  ''')
    print(Fore.LIGHTWHITE_EX + '''30) PayPal them 1,000,000 dollars from your bank account''')
    print(Fore.LIGHTWHITE_EX + '''31) Ask them if they're doing ok ''')
    print(Fore.LIGHTWHITE_EX + '''32) "It's dark, maybe I'm just imagining it" ... ''')
    stranger = input(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'Enter the number you think is correct: ')
    while stranger != '31' and stranger.lower() != 'thirty one' and stranger.lower() != "thirty-one":
        print(Fore.LIGHTGREEN_EX + Style.BRIGHT + "It's the FINAl act of kindness!!! You can do this.")
        stranger = input(Fore.LIGHTGREEN_EX + Style.BRIGHT + 'Enter the number you think is correct: ')
    print('')
    print(Fore.MAGENTA + Style.BRIGHT + 'Great job! Your final letter: ' + Fore.LIGHTWHITE_EX + '"K"')
    print('')


    print(Fore.LIGHTYELLOW_EX + Style.BRIGHT + 'Here are all of your letters: ' + Fore.RESET)
    letters = ['D', 'S', 'N', 'E', 'S', 'I', 'N', 'K']
    random.shuffle(letters)
    for l in letters:
        print(l, end=' ', flush=True)
        time.sleep(0.2)
    KINDNESS = input(Fore.LIGHTYELLOW_EX + Style.BRIGHT + '''\n \nRearrange these to make the final word and win the show: ''')
    while KINDNESS.lower() != 'kindness':
        print(Fore.LIGHTRED_EX + 'Try again!')
        KINDNESS = input(Fore.LIGHTYELLOW_EX + Style.BRIGHT + 'Here are all of your letters: ' + Fore.LIGHTWHITE_EX + Style.BRIGHT + 'D, S, N, E, S, I, N, and K.' + Fore.LIGHTYELLOW_EX + Style.BRIGHT + '''
Rearrange these to make the final word and win the show: ''')
    print("")
    print(Fore.GREEN + Style.BRIGHT + '''What about it? Just kidding, you are the OFFICIAL WINNER of this game show!
Your prize will be sent to you within 1,000,000 buisiness years. No guarantees, of course.''')
    print("\n \n" + "="*50)
    print("üéâüéâüéâ CONGRATULATIONS! üéâüéâüéâ")
    print("="*50 + "\n")
    print(Fore.LIGHTCYAN_EX + Style.BRIGHT + "Remember: Kindness is free, but priceless.")
    print('\n \n ')
    again = input('''Play again? (yes/no): ''')
    if again.lower() == "yes" or again.lower() == "yeah" or again.lower() == "yep":
        return kindness_initial()
    elif again.lower() == "no" or again.lower() == "nope" or again.lower() == "nah":
        print(Fore.LIGHTMAGENTA_EX + Style.BRIGHT + "Thanks for playing! \n\n")
        return None
    else :
        print(Fore.LIGHTMAGENTA_EX + Style.BRIGHT + "I'll assume this is a no. Thank's for playing! \n\n")


kindness_initial()
